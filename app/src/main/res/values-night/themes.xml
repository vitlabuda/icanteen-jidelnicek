<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ICanteenJídelníček" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryLightColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryLightColor</item>
        <item name="colorSecondaryVariant">@color/primaryLightColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/darkModeBackground</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/darkModeBackground</item>
        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.ICanteenJídelníček.ProgressDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:background">@color/darkModeDialogBackground</item>
    </style>

</resources>