<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/recycleritem_canteen_list_helper_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="9dp"
        android:paddingTop="6dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recycleritem_canteen_list_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Canteen name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/recycleritem_canteen_list_set_as_favorite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:layout_marginStart="6dp"
            app:srcCompat="@drawable/ic_star_empty"
            android:contentDescription="@string/set_as_favorite" />
    </LinearLayout>

    <TextView
        android:id="@+id/recycleritem_canteen_list_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycleritem_canteen_list_helper_linear_layout"
        android:layout_alignStart="@id/recycleritem_canteen_list_helper_linear_layout"
        android:paddingHorizontal="9dp"
        android:paddingTop="3dp"
        android:paddingBottom="6dp"
        android:singleLine="true"
        android:text="https://strav.nasejidelna.cz/1234/login" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/recycleritem_canteen_list_url"
        android:background="?android:attr/listDivider" />
</RelativeLayout>